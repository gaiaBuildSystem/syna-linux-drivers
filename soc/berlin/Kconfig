# Berlin SoC drivers
#
menu "Berlin SoC drivers"
	depends on ARCH_BERLIN || COMPILE_TEST

source "drivers/synaptics/soc/berlin/Kconfig.avio"
source "drivers/synaptics/soc/berlin/Kconfig.isp"
source "drivers/synaptics/soc/berlin/Kconfig.gpu"

config BERLIN_CHIPID
	tristate "Support BERLIN CHIPID"
	default n
	select SOC_BUS
	help
	  If you say Y here you get support for the BERLIN CHIP id

config BERLIN_SM
	tristate "Support SM CPU"
	default n
	select POWER_RESET
	select REBOOT_MODE
	help
	  Enable support for SM(System Manager) which is designed for front
	  panel control and power management.

config BERLIN_TZD
	tristate "Support Synaptics ARM TrustZone"
	default n
	help
	  Enable support for Synaptics ARM TrustZone

config BERLIN_SHM
	tristate "Support BERLIN SHM"
	default n
	help
	  SHM support

config BERLIN_VPP_MEM
	tristate "Support BERLIN VPP MEM module"
	default n
	help
	  VPP MEM support

config BERLIN_VPP
	tristate "Support Berlin VPP module"
	default n
	depends on DMABUF_HEAPS && BERLIN_AVIO
	help
	  This is the VPP module for Berlin.

config BERLIN_CC
	tristate "Support BERLIN CC"
	default n
	help
	  Enable support for BERLIN CC

config BERLIN_AVIO
	tristate "Support AVIO"
	default n
	select BERLIN_MSGQ
	help
	  Enable support for AVIO

config BERLIN_MSGQ
	tristate "Support Message Q"
	default n
	help
	  Enable support for MSGQ

config BERLIN_VPU
	tristate "Support Synaptics VPU"
	imply BERLIN_VPU_AMP
	help
	  Support Synaptics VPU multiple interfaces

config BERLIN_VPU_AMP
	bool "Support VPU AMP interface"
	depends on BERLIN_VPU

config BERLIN_VPU_V4L2
	bool "Support VPU V4L2 M2M interface"
	depends on VIDEO_DEV
	select VIDEOBUF2_MEMOPS
	select DMA_SHARED_BUFFER
	select V4L2_MEM2MEM_DEV
	depends on BERLIN_BM
	depends on BERLIN_VPU

config SYNA_ISP
	tristate "Support for ISP"
	default n
	help
	  isp core driver

config BERLIN_TSP
	tristate "Support BERLIN TSP"
	default n
	select BERLIN_MSGQ
	help
	  Enable support for TSP

config BERLIN_AXI_METER
	tristate "Support AXI performance meter"
	default n
	help
	  axi performance meter support

config BERLIN_AOUT
	tristate "Support BERLIN AOUT"
	default n
	select BERLIN_DHUB_IRQ
	depends on BERLIN_MSGQ && BERLIN_SHM && BERLIN_AVIO
	help
	  AOUT support

config POWERVR_ROGUE
	tristate "PowerVR rogue android driver"
	default n
	help
	  Imagination gpu driver for android

config POWERVR_ROGUE_WS
	tristate "PowerVR rogue Linux window system driver"
	default n
	help
	  Imagination gpu driver for Linux window system

config BERLIN_NSK
	tristate "Support BERLIN NSK"
	default n
	help
	  NSK support

config BERLIN_OVP
	tristate "Support OVP"
	default n
	select BERLIN_MSGQ
	select BERLIN_TZD
	help
	  Enable support for OVP

config BERLIN_SCRD
	tristate "Support BERLIN SMARTCARD"
	default n
	select BERLIN_MSGQ
	help
	  Enable support for Smart card

config BERLIN_CEC
	tristate "Support BERLIN CEC"
	default n
	select BERLIN_MSGQ
	help
	  Enable support for CEC

config HIFI_DSP
	tristate "Support HIFI DSP"
	default n
	depends on BERLIN_MSGQ
	help
	  DSP support

config BERLIN_VSYNC
	tristate "Support BERLIN VSYNC"
	default n
	help
	  Enable Berlin Vsync

config BERLIN_HRX
	tristate "Support BERLIN HRX"
	default n
	select BERLIN_DHUB_IRQ
	depends on BERLIN_MSGQ && BERLIN_SHM && BERLIN_AVIO
	help
	  HRX support

config BERLIN_IFCP
	tristate "Support Irdeto IFCP"
	default n
	help
	  Enable support for Irdeto IFCP

config BERLIN_BM
	tristate "Support BERLIN BM"
	default n
	depends on DMABUF_HEAPS_EXTRA
	help
	 AMP buffer meta data management module

config SYNAPTICS_BT_DEVICE
	tristate "BT Device support"
	depends on BT && RFKILL
	default n
	help
	  Say Y here if you want to use the BT device.

config SYNA_DRM
	tristate "synaptics drm display module"
	default n
	select BERLIN_VPP
	select BERLIN_AVIO
	select DRM_KMS_HELPER
	help
	  synaptics drm display support

config SYNA_DRM_BRIDGE_LT9611
	bool "syna compatible lt9611 drm bridge"
	default n
	depends on SYNA_DRM
	help
	  syna compatible lt9611 drm bridge

config SYNA_WSPANEL_1080P
	tristate "syna compatible wspanel 1080p resolution"
	default n
	depends on SYNA_DRM
	help
	  syna compatible waveshare 13.3 inch 1080P panel

config SYNA_MC_DFC
	tristate "Support MC hwcc"
	default n
	help
	  MC DFC HWCC for DDR frequency switch on the fly.

config MEDIA_DRM
	tristate "Support synaptics media drm"
	default n
	help
	  synaptics media drm module

endmenu
