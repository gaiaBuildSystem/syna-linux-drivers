menuconfig SYNAPTICS_PINCTRL
  bool "Synaptics pinctrl driver support"
  default y
  help
    Synaptics pinctrl driver support

if SYNAPTICS_PINCTRL

source "drivers/synaptics/pinctrl/berlin/Kconfig"

config PINCTRL_DVF
	bool "DSPG DVF99 SoC pinctrl driver"
	depends on ARCH_DVF && OF
	select PINMUX
	select PINCONF

config PINCTRL_DVF101
	bool "DSPG DVF101 SoC pinctrl driver"
	depends on (ARCH_DVF101 || ARCH_DVF) && OF && GPIOLIB
	select PINMUX
	select PINCONF

endif
